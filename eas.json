{
  "cli": {
    "version": ">= 12.5.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "buildType": "apk",
        "developmentClient": false,
        "distribution": "internal",
        "gradleCommand": ":app:assembleRelease" 
      }
    },
    "production": {
      "android": {
        "buildType": "apk",
        "developmentClient": false,
        "distribution": "store",
        "gradleCommand": ":app:assembleRelease"
      },
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
